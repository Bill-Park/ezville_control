{
  "name": "MQTT 기반 Simple EzVille Wallpad Control",
  "version": "0.0.1",
  "slug": "simple_mqtt_ezville_control",
  "url": "https://github.com/ktdo79/addon",
  "description": "mqtt 통신을 활용한 간단화된 EzVille 월패드 컨트롤러",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "map": [
    "share:rw"
  ],
  "startup": "application",
  "boot": "auto",
  "options": {
    "DEBUG": false,
    "mqtt_log": false,
    "ew11_log": false,
    "mode": "mixed",
    "mqtt_server": "192.168.x.x",
    "mqtt_id": "id",
    "mqtt_password": "password",
    "ew11_server": "192.168.x.x",
    "ew11_port": 8899,
    "ew11_id": "admin",
    "ew11_password": "elfin_password",
    "command_interval": 0.06,
    "command_retry_count": 20,
    "random_backoff": true,
    "discovery_delay": 0.01,
    "state_loop_delay": 0.02,
    "command_loop_delay": 0.02,
    "serial_recv_delay": 0.02,
    "force_update_mode": false,
    "force_update_period": 600,
    "force_update_duration": 2,
    "ew11_buffer_size": 128,
    "ew11_timeout": 3600
  },
  "schema": {
    "DEBUG": "bool",
    "mqtt_log": "bool",
    "ew11_log": "bool",
    "mode": "str",
    "mqtt_server": "str",
    "mqtt_id": "str",
    "mqtt_password": "str",
    "ew11_server": "str",
    "ew11_port": "int",
    "ew11_id": "str",
    "ew11_password": "str",
    "command_interval": "float",
    "command_retry_count": "int",
    "random_backoff": "bool",
    "discovery_delay": "float",
    "state_loop_delay": "float",
    "command_loop_delay": "float",
    "serial_recv_delay": "float",
    "force_update_mode": "bool",
    "force_update_period": "int",
    "force_update_duration": "int",
    "ew11_buffer_size": "int",
    "ew11_timeout": "int"
  }
}
